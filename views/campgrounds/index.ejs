<%- include('../partials/header') %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i>Welcome to YelpCamp</h1>
            <h5>View our hand-picked campgrounds from all over the world!</h5>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>
    <div class="row text-center">
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card">
                    <img src="<%= campgrounds.image %>" class="card-img-top" id = "imageinindex" alt="<%= campgrounds.name %>">
                    <div class="card-body">
                        <h5 class="card-title" style="margin: 0;"><%= campgrounds.name %></h5>
                        <div class= "base-index" style="margin: 5px 0;">
                            <div class="layer1-index">
                                <i class="fas fa-heart heart" style="color: red;"></i>
                            </div>
                            <div class="layer2-index">
                                <span style="height: 23px; width: 40px;" > <%= campgrounds.likes.length %></span>
                            </div>
                        </div>
                        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More Info!</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<%- include('../partials/footer') %>

