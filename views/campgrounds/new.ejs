<%- include('../partials/header') %>
<div class="container">
        <h1 style="text-align: center; margin-top:10px;">Create A New Campground </h1>
        <div style="width: 30%; margin : 20px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class= "form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class= "form-control" type="text" name="image" placeholder="Image Address">
                </div>
                <div class="form-group">
                    <textarea class= "form-control" name="description" ></textarea> 
                </div>
                <div class="form-group">
                    <input class= "form-control" type="number" name="price" placeholder="Price in Rupees" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back!</a>
        </div>
</div>

<%- include('../partials/footer') %>